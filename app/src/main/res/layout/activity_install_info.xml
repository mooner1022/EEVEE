<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_mndmdm_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rlTitle"
            android:background="@color/common_mndmdm_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/ibBack"
                android:background="@drawable/img_common_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/common_base_color_txt"
                android:gravity="center_horizontal"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="설치정보"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:id="@+id/rlStateCommant"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <Button
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/btnRequest"
                android:background="@drawable/style_mndmdm_btn_deny"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닫기"
                app:backgroundTint="@null"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rlStateCommant"
            android:layout_below="@+id/rlTitle">
            <RelativeLayout
                android:id="@+id/rlName"
                android:background="@drawable/img_common_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/common_base_color_txt"
                    android:gravity="center_horizontal"
                    android:id="@+id/tvUserDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="설치코드 정보를 입력하시기 바랍니다."/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/common_base_color_txt"
                    android:id="@+id/tvAuthCode"
                    android:background="@color/common_base_color_txt_yellow"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="설치코드"
                    android:layout_below="@+id/tvUserDesc"
                    android:layout_centerHorizontal="true"/>
                <EditText
                    android:gravity="center"
                    android:id="@+id/etAuthCode"
                    android:background="@drawable/img_common_textbox"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:text="amnd101"
                    android:textColor="@color/black"
                    android:layout_below="@+id/tvAuthCode"
                    android:inputType="textPassword"/>
                <Button
                    style="@style/Widget.MaterialComponents.Button"
                    android:id="@+id/btnCompanyFix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="수정"
                    android:textColor="@color/white"
                    android:layout_below="@+id/etAuthCode"
                    app:backgroundTint="#5a595b"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>