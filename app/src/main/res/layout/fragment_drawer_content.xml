<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    style="@style/Theme.EEVEE"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    tools:context=".view.DrawerContentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="@style/Widget.Material3.Button"
            android:id="@+id/btnClose"
            android:background="@drawable/ic_menu_close_clear_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/rlListTitle"
            android:background="@color/mdm_background"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/ivLogo"
                    android:src="@drawable/img_common_mmsa_logo_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"/>
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/tvCopyRightnVersion"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivLogo"/>
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#ffff00"
                    android:gravity="center_horizontal"
                    android:id="@+id/tvCallCenter2"
                    android:focusable="true"
                    android:visibility="visible"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/mndmdm_common_call_center"
                    android:layout_below="@+id/ivLogo"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlBottom"
            android:background="@color/mdm_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlListTitle">
            <ListView
                android:layout_gravity="start"
                android:id="@+id/lvDrawerMenu"
                android:background="@color/mdm_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/common_mndmdm_list_border"
                android:dividerHeight="1dp"
                android:choiceMode="singleChoice"
                android:layout_above="@+id/btnDelete"
                android:layout_alignParentTop="true"/>
            <ImageView
                android:id="@+id/ivCopyRight"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/ivCopyRight"/>
            <TextView
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:id="@+id/tvCallCenter"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="invisible"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="02-2262-0000"
                android:layout_above="@+id/ivCopyRight"
                android:layout_centerHorizontal="true"/>

            <Button
                android:textSize="20sp"
                android:id="@+id/btnDelete"
                android:background="@color/mdm_unlocked_red"
                app:backgroundTint="@color/mdm_unlocked_red"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="국방모바일보안 삭제"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>