<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_mndmdm_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/body"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/rlTitle"
            android:background="@color/common_mndmdm_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ibBack"
                android:background="@drawable/img_common_back"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_centerVertical="true"/>

            <TextView
                android:textSize="22.0sp"
                android:textStyle="bold"
                android:textColor="@color/common_base_color_txt"
                android:gravity="center_horizontal"
                android:id="@+id/tvTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:text="로그보기"/>

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:id="@id/rlStateCommant"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:id="@id/btnClose"
                android:background="@drawable/style_mndmdm_btn_deny"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="닫기"
                app:backgroundTint="@null"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLog"
            android:background="@color/common_mndmdm_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/rlStateCommant"
            android:layout_below="@id/rlTitle"/>
    </RelativeLayout>
</RelativeLayout>
