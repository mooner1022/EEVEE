<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Base.Theme.EEVEE"
    android:background="@color/mdm_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rlTimeLine"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/rlTitle"
                android:background="@color/mdm_unlocked_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/rlCheckInTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_gravity="center_horizontal"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvInstallDateTitle"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:gravity="bottom"
                                android:text="설치일시 : "
                                style="@style/TopTextTitle"/>

                            <TextView
                                android:id="@+id/tvInstallDate"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="19.10.10 12:12"
                                style="@style/TopTextContentsMid"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center_horizontal"
                            android:visibility="gone"
                            android:id="@+id/llCheckInTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvCheckInTimeTitle"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="차단일시 : "
                                style="@style/TopTextTitle"/>

                            <TextView
                                android:id="@+id/tvCheckInTime"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="19.10.10 12:11"
                                style="@style/TopTextContentsMid"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/llCallService"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/common_base_color_txt"
                            android:gravity="center"
                            android:id="@+id/tvCallService"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="@string/mndmdm_common_call_center"/>

                        <TextView
                            android:textSize="16dp"
                            android:textStyle="normal"
                            android:textColor="@color/common_base_color_txt"
                            android:gravity="top|center_horizontal"
                            android:id="@+id/tvCallServiceInfo"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="09~21시(평일)/09~18시(휴일)"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/flSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/llTop"
            app:layout_constraintTop_toBottomOf="@+id/rlTimeLine">
            <RelativeLayout
                android:id="@+id/rlSubTitle"
                android:background="@drawable/img_bg_user_out_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/llTop"
                app:layout_constraintTop_toBottomOf="@+id/rlTimeLine"/>
            <ImageView
                android:id="@+id/ivvhelpcall"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/img_help_call_png"
                android:scaleType="fitCenter"/>
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/rlStateCommant"
            app:layout_constraintBottom_toTopOf="@+id/rlStateCommant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flSubTitle">
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/rlCamera"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/llPolicyState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_centerInParent="true">
                    <RelativeLayout
                        android:id="@+id/rlPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:id="@+id/llPolicys"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginBottom="5dp"
                            android:layout_alignParentBottom="true">

                            <ImageView
                                android:id="@+id/ivCamera"
                                android:src="@drawable/img_policy_camera_off"
                                android:visibility="visible"
                                android:adjustViewBounds="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/ivMic"
                                android:src="@drawable/img_policy_mic_off"
                                android:visibility="visible"
                                android:adjustViewBounds="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/ivWifi"
                                android:src="@drawable/img_policy_wifi_off"
                                android:visibility="visible"
                                android:adjustViewBounds="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/ivTether"
                                android:src="@drawable/img_policy_tether_off"
                                android:visibility="visible"
                                android:adjustViewBounds="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/ivUsb"
                                android:src="@drawable/img_policy_usb_off"
                                android:visibility="visible"
                                android:adjustViewBounds="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <!--
                            <ImageView
                                android:id="@+id/ivGps"
                                android:background="@drawable/img_policy_gps_off"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            -->
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/relative"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_above="@+id/llPolicys">
                            <ProgressBar
                                android:id="@+id/pdProgress"
                                android:visibility="gone"
                                android:layout_width="242dp"
                                android:layout_height="242dp"
                                android:scaleType="fitCenter"
                                android:indeterminateDrawable="@drawable/animation_progress_red"
                                android:layout_centerInParent="true"/>
                            <ImageView
                                android:id="@+id/ivCameraSticker"
                                android:layout_width="242dp"
                                android:layout_height="242dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/img_policy_state_camera_allow"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:layout_centerInParent="true"
                                android:foregroundGravity="center"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"/>
                            <ImageView
                                android:id="@+id/ivCameraDenySticker"
                                android:layout_width="186dp"
                                android:layout_height="186dp"
                                android:visibility="invisible"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/img_policy_state_addition_block"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:layout_centerInParent="true"
                                android:foregroundGravity="center"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"/>
                            <RelativeLayout
                                android:layout_gravity="center"
                                android:id="@+id/rlintegrity"
                                android:visibility="invisible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">
                                <ImageView
                                    android:id="@+id/ivViolation"
                                    android:background="@drawable/img_bg_user_out"
                                    android:visibility="visible"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_margin="15dp"
                                    android:scaleType="centerCrop"
                                    android:adjustViewBounds="true"
                                    android:layout_centerInParent="true"
                                    android:foregroundGravity="center"/>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_gravity="center_horizontal"
                                android:orientation="vertical"
                                android:id="@+id/llDelayTime"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_alignBottom="@+id/ivCameraDenySticker">
                                <LinearLayout
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textSize="15dp"
                                        android:textColor="#ffffff"
                                        android:id="@+id/tvDay"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"/>
                                    <TextView
                                        android:textSize="15dp"
                                        android:textColor="#ffffff"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:text="일"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textSize="15dp"
                                        android:textColor="#ffffff"
                                        android:id="@+id/tvHour"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"/>
                                    <TextView
                                        android:textSize="15dp"
                                        android:textColor="#ffffff"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:text=":"/>
                                    <TextView
                                        android:textSize="15dp"
                                        android:textColor="#ffffff"
                                        android:id="@+id/tvMin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"/>
                                    <TextView
                                        android:textSize="15dp"
                                        android:textColor="#ffffff"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:text=":"/>
                                    <TextView
                                        android:textSize="15dp"
                                        android:textStyle="bold"
                                        android:textColor="#ffffff"
                                        android:id="@+id/tvSec"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00"/>
                                </LinearLayout>
                            </LinearLayout>
                            <ProgressBar
                                android:id="@+id/pbLocation"
                                android:visibility="invisible"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:indeterminateDrawable="@drawable/animation_progress"
                                android:layout_centerInParent="true"
                                style="?android:attr/progressBarStyle"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/rlStateCommant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toTopOf="@+id/rlVersion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/rlButton"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnCameraDeny"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/style_mndmdm_btn_deny"
                    app:backgroundTint="@null"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/mndmdm_common_add_func_deny"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/llBtnDefault"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100">
                    <Button
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:id="@+id/btnDenyFirst"
                        android:background="@drawable/style_mndmdm_btn_small_deny"
                        android:padding="5dp"
                        android:visibility="visible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="mndmdm_common_deny_first"
                        android:layout_weight="50"/>
                    <Button
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:id="@+id/btnDenySecond"
                        android:background="@drawable/style_mndmdm_btn_small_deny"
                        android:padding="5dp"
                        android:visibility="visible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="mndmdm_common_deny_second"
                        android:layout_weight="50"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/llBtnFive"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="150">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent">
                        <Button
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:id="@+id/btnAllowBeacon_2"
                            android:background="@drawable/style_mndmdm_btn_small_allow"
                            android:padding="5dp"
                            android:visibility="visible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/mndmdm_common_beacon_allow"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/btnAllowGPS_2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <Button
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/btnAllowGPS_2"
                            android:background="@drawable/style_mndmdm_btn_small_allow"
                            android:padding="5dp"
                            android:visibility="visible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/mndmdm_common_gps_allow"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/btnDenySecond_2"
                            app:layout_constraintStart_toEndOf="@+id/btnAllowBeacon_2"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <Button
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/btnDenySecond_2"
                            android:background="@drawable/style_mndmdm_btn_small_allow"
                            android:padding="5dp"
                            android:visibility="visible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/mndmdm_common_deny_second"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/btnCheckEntryControl_2"
                            app:layout_constraintStart_toEndOf="@+id/btnAllowGPS_2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_goneMarginEnd="0dp"
                            app:layout_goneMarginStart="0dp"/>
                        <Button
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:id="@+id/btnCheckEntryControl_2"
                            android:background="@drawable/style_mndmdm_btn_small_allow"
                            android:padding="5dp"
                            android:visibility="visible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/mndmdm_common_check_entry_control"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/btnDenySecond_2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_goneMarginEnd="0dp"
                            app:layout_goneMarginStart="0dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/llButton"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <Button
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/btnAllowBeacon"
                        android:background="@drawable/style_mndmdm_btn_small_allow"
                        android:padding="5dp"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/mndmdm_common_beacon_allow"
                        app:backgroundTint="@null"
                        app:layout_goneMarginEnd="0dp"
                        app:layout_goneMarginStart="0dp"/>

                    <Button
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/btnAllowGPS"
                        android:background="@drawable/style_mndmdm_btn_small_allow"
                        android:padding="5dp"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/mndmdm_common_gps_allow"
                        app:backgroundTint="@null"
                        app:layout_goneMarginEnd="0dp"
                        app:layout_goneMarginStart="0dp"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:id="@+id/rlVersion"
            android:background="@color/mdm_background_footer"
            android:padding="10dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/mdm_text_gray"
                    android:id="@+id/tvAgentVersionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version "/>
                <TextView
                    android:textSize="12dp"
                    android:textColor="@color/common_base_color_txt"
                    android:id="@+id/tvAgentVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.00.00"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>